@page "/2"
@using JoinedTogetherGmtk2021.Game

<h2>
    Level Two-ish
</h2>

<CastleScenario FloorFactory="@FloorTemplate" WinConditionReached="@Next"/>


@inject NavigationManager NavigationManager
@code
{
    protected override void OnParametersSet()
    {
        base.OnParametersSet();
    }

    private void Next()
    {
        NavigationManager.NavigateTo("3");
    }

    private Floor FloorTemplate()
    {
        var floor = new Floor(6, 6);
        floor.Layout[new FloorCoord {X = 1, Y = 1}] = new Room(RoomTypes.PATH_E_W);
        
        floor.Layout[new FloorCoord {X = 1, Y = 5}] = new Room(RoomTypes.PATH__SW);
        floor.Layout[new FloorCoord {X = 2, Y = 5}] = new Room(RoomTypes.PATHNE__);
        floor.Layout[new FloorCoord {X = 3, Y = 5}] = new Room(RoomTypes.PATHN___);
        floor.Layout[new FloorCoord {X = 4, Y = 5}] = new Room(RoomTypes.PATH_E_W);

        floor.Layout[new FloorCoord {X = 5, Y = 3}] = new Room(RoomTypes.PATH_E_W);

        floor.GameObjects.Add(new GameObject{Position = new FloorCoord{X=1,Y=1},IsPlayer = true});
        floor.GameObjects.Add(new GameObject{Position = new FloorCoord{X=5,Y=3},IsExit = true});

        return floor;
    }

}


